number1 = int(input("Привет!,какое число ? : "))
number2 = int(input("А второе ?:"))
number3 = input("Что делаем с ним? : ")

if number3 == "*":
    print(number1 * number2)
elif number3 == "/":
    print(number1 / number2)
elif number3 == "+":
    print(number1 + number2)
elif number3 == "-":
    print(number1 - number2)
else:
    print("Нету такого друг мой)")
